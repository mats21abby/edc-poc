{
  "@context": {
    "@vocab": "https://w3id.org/edc/v0.0.1/ns/",
    "odrl": "http://www.w3.org/ns/odrl/2/"
  },
  "@id": "researchOnlyPolicy",
  "policy": {
    "@context": "http://www.w3.org/ns/odrl.jsonld",
    "@type": "Set",
    "permission": [{
      "action": "use",
      "constraint": [{
        "leftOperand": "purpose",
        "operator": "eq",
        "rightOperand": "research"
      }]
    }],
    "prohibition": [{
      "action": "commercialize",
      "constraint": [{
        "leftOperand": "purpose",
        "operator": "eq",
        "rightOperand": "commercial"
      }]
    }]
  }
} 